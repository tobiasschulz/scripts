[ -r /etc/lsb-release ] && . /etc/lsb-release

if [ -z "$DISTRIB_DESCRIPTION" ] && [ -x /usr/bin/lsb_release ]; then
	# Fall back to using the very slow lsb_release utility
	DISTRIB_DESCRIPTION=$(lsb_release -s -d)
fi

for x in /etc/tinc/*/tinc.conf
do
	. $x >/dev/null 2>&1
done

echo
printf "  Welcome to %s at " "$DISTRIB_DESCRIPTION"
echo -ne '\033[01;34m'$Name'\033[00m'" ("
echo -ne '\033[01;33m'
ifconfig  | grep inet | cut -d: -f2 | cut -d' ' -f1 | grep -v 127.0. | egrep "...." | joinlines ", "
echo -ne '\033[00m'
printf ") (%s %s %s)\n" "$(uname -o)" "$(uname -r)" "$(uname -m)"
